---
import Layout from "../layouts/Layout.astro";


---

<Layout title="hkanwal.com">
	<main>
		<h1>Harkeerat Kanwal</h1>
		<section>
			A full-stack software engineer, web developer and mobile app developer.
		</section>
		<div id="links">
			<div class="badge">
				<img src="/favicon-github.svg" height="42px" width="42px" />
			</div>
		</div>
	</main>
</Layout>

<style>
	main {
		height: clamp(300px, 50%, 90%);
		width: clamp(300px, 50%, 90%);
		/* background-color: red; */

		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
	}

	#links {
		padding-top: 100px;
	}

	.badge {
		display: flex;
		width: 60px;
		height: 60px;
		align-items: center;
		justify-content: center;
		border: 4px solid white;
		border-radius: 20%;

		--s: 90%;
    --l: 60%;
	}

	.badge:hover {
		cursor: pointer;
		animation: rainbow 4s linear infinite;
	}

	@keyframes rainbow {
		0% {
			border-image: linear-gradient(45deg, hsl(0, var(--s), var(--l)), hsl(50, var(--s), var(--l)), hsl(100, var(--s), var(--l)), hsl(150, var(--s), var(--l)), hsl(200, var(--s), var(--l)), hsl(250, var(--s), var(--l)), hsl(300, var(--s), var(--l))) 5 5;
		}

		25% {
			border-image: linear-gradient(135deg, hsl(0, var(--s), var(--l)), hsl(50, var(--s), var(--l)), hsl(100, var(--s), var(--l)), hsl(150, var(--s), var(--l)), hsl(200, var(--s), var(--l)), hsl(250, var(--s), var(--l)), hsl(300, var(--s), var(--l))) 5 5;
		}

		50% {
			border-image: linear-gradient(225deg, hsl(0, var(--s), var(--l)), hsl(50, var(--s), var(--l)), hsl(100, var(--s), var(--l)), hsl(150, var(--s), var(--l)), hsl(200, var(--s), var(--l)), hsl(250, var(--s), var(--l)), hsl(300, var(--s), var(--l))) 5 5;
		}

		75% {
			border-image: linear-gradient(315deg, hsl(0, var(--s), var(--l)), hsl(50, var(--s), var(--l)), hsl(100, var(--s), var(--l)), hsl(150, var(--s), var(--l)), hsl(200, var(--s), var(--l)), hsl(250, var(--s), var(--l)), hsl(300, var(--s), var(--l))) 5 5;
		}

		100% {
			border-image: linear-gradient(45deg, hsl(0, var(--s), var(--l)), hsl(50, var(--s), var(--l)), hsl(100, var(--s), var(--l)), hsl(150, var(--s), var(--l)), hsl(200, var(--s), var(--l)), hsl(250, var(--s), var(--l)), hsl(300, var(--s), var(--l))) 5 5;
		}
	}
</style>
