---
interface Props {
	style?: string;
}

const { style } = Astro.props;
---

<a id="source" style={style} href="https://github.com/HKanwal/hkanwal-2">&lt;source/&gt;</a>

<style>
  #source {
		color: white;
		font-size: 1em;
		font-family: "Unbounded", sans-serif;
		font-weight: 300;
		position: fixed;
		bottom: 25px;
		right: 15px;
    text-decoration: none;
	}

  #source:hover {
    color: #77B3F2;
  }
</style>

