---
interface Props {
  title: string;
  href: string;
  style?: string;
}

const { title, href, style } = Astro.props;
---

<a class="card" href={href} style={style ?? ""}>{title}</a>

<style>
  .card {
    position: relative;
    background-color: #252830;
    width: 500px;
    padding: 15px 25px;
    border-radius: 20px;

    font-family: 'Manrope', sans-serif;
    font-size: 1.5em;
    text-decoration: none;
    color: white;

    transition: padding 0.2s ease;
  }

  .card:hover, .card:focus {
    padding: 20px 25px;
    color: #77B3F2;
    outline: none;
  }
</style>
