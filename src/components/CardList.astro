---
import Card from "./Card.astro";
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div id='card-list'>
  <a id='back-btn'>
    <div id='ripple'></div>
    <Icon name='ep--arrow-up' class='up-arrow' height={45} width={45} />
  </a>
  <h2 id='list-title'>{title}</h2>
  <Card title='Quaternion Motion' href='https://hkanwal.github.io/quaternions/' style='margin-top: 20px;' />
  <Card title='AI Todolist' href='https://hkanwal.github.io/ai-todolist/' style='margin-top: 15px;' />
  <Card title='Blog' href='https://blog.hkanwal.com/' style='margin-top: 15px;' />
  <Card title='Gamma Flip Line' href='https://github.com/HKanwal/gamma-flip-line' style='margin-top: 15px;' />
  <Card title='Back vs Front Month Volatility' href='https://github.com/HKanwal/back-vs-front-month-volatility' style='margin-top: 15px;' />
</div>

<script>
  const backBtn = document.getElementById("back-btn") as HTMLLinkElement;
  const ripple = document.getElementById("ripple") as HTMLDivElement;
  const rippleEnabled = false;

  backBtn.onclick = (e: MouseEvent) => {
    if (rippleEnabled) {
      ripple.classList.remove("ripple");
      ripple.style.left = `${e.offsetX - 400}px`;
      ripple.style.top = `${e.offsetY - 400}px`;
      ripple.classList.add("ripple");
    }
  };

  backBtn.addEventListener("click", () => {
    document.getElementById("home")?.scrollIntoView({ behavior: "smooth" });
  });
</script>

<style>
  #card-list {
    height: 100%;
    width: 560px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  #back-btn {
    position: relative;
    width: 80px;
    display: flex;
    justify-content: center;
    margin-top: 20px;
    margin-left: auto;
    padding-top: 5px;
    padding-bottom: 10px;

    text-decoration: none;
    border-radius: 20px;
    background-color: transparent;

    overflow: hidden;
  }

  .up-arrow {
    color: white;
    opacity: 0.3;
  }

  #back-btn:hover {
    cursor: pointer;
  }

  #back-btn:hover,
  #back-btn:active {
    background-color: #252830;
  }

  #back-btn:hover > .up-arrow,
  #back-btn:active > .up-arrow {
    color: white;
    opacity: 0.7;
  }

  .ripple {
    border-radius: 50%;
    transform: scale(0);
    width: 800px;
    height: 800px;
    background-color: white;
    opacity: 0.5;
    position: absolute;
    pointer-events: none;

    animation: ripple 0.3s linear;
  }

  @keyframes ripple {
    to {
      transform: scale(1);
      opacity: 0;
    }
  }

  #list-title {
    width: 100%;
    padding-left: 8%;
    margin: 0;
    margin-top: 25px;

    font-family: "Roboto", sans-serif;
    font-size: 3em;
    font-weight: 300;
  }

  @media (max-width: 480px) {
    #list-title {
      text-align: center;
      font-size: 2.5em;
      padding-left: 0;
    }

    #back-btn {
      margin-right: 2%;
    }
  }
</style>
